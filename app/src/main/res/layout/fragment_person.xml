<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:id="@+id/viewFlipper"
        android:layout_height="150dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Chào mừng bạn đến với Tiki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/dang_nhap" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:textSize="28sp"
            android:text="Đăng nhập" />

        <ImageView
            android:id="@+id/imgDangNhap"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@null"
            app:srcCompat="@drawable/mui_ten" />
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/dang_nhap" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:textSize="28sp"
            android:text="Đăng ký" />

        <ImageView
            android:id="@+id/imgDangKy"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@null"
            app:srcCompat="@drawable/mui_ten" />
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/dang_nhap" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:textSize="28sp"
            android:text="Thông tin cá nhân" />

        <ImageView
            android:id="@+id/imgPerson"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@null"
            app:srcCompat="@drawable/mui_ten" />
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/thong_bao" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:textSize="28sp"
            android:text="Thông báo" />

        <ImageView
            android:id="@+id/imgThongBao"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@null"
            app:srcCompat="@drawable/mui_ten" />
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/gioi_thieu" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:textSize="28sp"
            android:text="Giới thiệu" />

        <ImageView
            android:id="@+id/imgGioithieu"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@null"
            app:srcCompat="@drawable/mui_ten" />
    </LinearLayout>

</LinearLayout>